<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="160" d:DesignHeight="80"
        Width="160" Height="80"
        x:Class="TicTacToe.Views.Winner"
        Title="Winner"
        Background="White">
    <Border CornerRadius="7" Padding="4">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="You won!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="OK" Width="60" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_OnClick" />
        </StackPanel>
    </Border>
</Window>